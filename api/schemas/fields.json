 {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Fields definitions",
    
    "definitions": {
        "citizen_id": {
            "type": "integer",
            "minimum": 0
        },
        "town": {
            "type": "string",
            "minLength": 1
        },
        "street": {
            "type": "string",
            "minLength": 1
        },
        "building": {
            "type": "string",
            "minLength": 1
        },
        "apartment": {
            "type": "integer",
            "minimum": 0
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "birth_date": {
            "type": "string",
            "pattern": "[0-9]{2}\\.[0-9]{2}\\.[0-9]{4}"
        },
        "gender": {
            "type": "string",
            "enum": ["male", "female"]
        },
        "relatives": {
            "type": "array",
            "uniqueItems": true,
            "items": { "$ref": "#/definitions/citizen_id" }
        }
    }
}
