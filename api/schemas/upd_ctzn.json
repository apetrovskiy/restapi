{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "For PATCH controller",
    "examples": [
        {
            "town": "abc",
            "street": "abc",
            "birth_date": "12.12.2012",
            "gender": "male",
            "relatives": []
        }
    ],

    "definitions": {
        "citizen_id": {
            "type": "integer",
            "minimum": 0
        },
        "town": {
            "type": "string",
            "minLength": 1
        },
        "street": {
            "type": "string",
            "minLength": 1
        },
        "building": {
            "type": "string",
            "minLength": 1
        },
        "apartment": {
            "type": "integer",
            "minimum": 0
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "birth_date": {
            "type": "string",
            "pattern": "[0-9]{2}\\.[0-9]{2}\\.[0-9]{4}"
        },
        "gender": {
            "type": "string",
            "enum": ["male", "female"]
        },
        "relatives": {
            "type": "array",
            "uniqueItems": true,
            "items": { "$ref": "#/definitions/citizen_id" }
        }
    },
    
    "type": "object",
    "properties": {
        "town": { "$ref": "#/definitions/town" },
        "street": { "$ref": "#/definitions/street" },
        "building": { "$ref": "#/definitions/building" },
        "apartment": { "$ref": "#/definitions/apartment" },
        "name": { "$ref": "#/definitions/name" },
        "birth_date": { "$ref": "#/definitions/birth_date" },
        "gender": { "$ref": "#/definitions/gender" },
        "relatives": { "$ref": "#/definitions/relatives" }
    },
    "additionalProperties": false,
    "minProperties": 1
}
