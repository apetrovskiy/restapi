 {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "For POST controller",
    "examples": [
        {
            "citizen_id": 1,
            "town": "abc",
            "street": "abc",
            "building": "abc",
            "apartment": 7,
            "name": "abc abc abc",
            "birth_date": "12.12.2012",
            "gender": "male",
            "relatives": []
        }
    ],

    "type": "object",
    "properties": {
        "citizen_id": { "$ref": "fields.json#/definitions/citizen_id" },
        "town": { "$ref": "fields.json#/definitions/town" },
        "street": { "$ref": "fields.json#/definitions/street" },
        "building": { "$ref": "fields.json#/definitions/building" },
        "apartment": { "$ref": "fields.json#/definitions/apartment" },
        "name": { "$ref": "fields.json#/definitions/name" },
        "birth_date": { "$ref": "fields.json#/definitions/birth_date" },
        "gender": { "$ref": "fields.json#/definitions/gender" },
        "relatives": { "$ref": "fields.json#/definitions/relatives" }
    },
    "additionalProperties": false,
    "required": [
        "citizen_id",
        "town",
        "street",
        "building",
        "apartment",
        "name",
        "birth_date",
        "gender",
        "relatives"
    ]
