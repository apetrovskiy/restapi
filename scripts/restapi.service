[Unit]
Description=Gunicorn instance to serve restapi
After=network.target
Requires=mongod.service

[Service]
User=restapi
WorkingDirectory=/opt/restapi
Environment="PATH=/opt/restapi/venv/bin"
ExecStart=/opt/restapi/venv/bin/gunicorn -w 4 -b 0.0.0.0:8080 "api:create_app()"

[Install]
WantedBy=multi-user.target